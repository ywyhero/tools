.tools{

}
.tools-img{
    width: 100%;
    height: 400rpx;
}
.tools-lists{
    width: 750rpx;
    display: flex;
    flex-wrap: wrap;
}
.tools-list{
    font-size: 28rpx;
    font-weight: normal;
    width: 33.3%;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
    color: #4a4a4a;
    border-right: 2rpx solid #c1c1c1;
    border-bottom: 2rpx solid #c1c1c1;
}
.tools-list:nth-of-type(3n) {
    border-right: 0;
}
.tools-unopen{
    color: #cccc;
}