.dream-search{
    padding: 20rpx;
    display: flex;
    align-items: center;
}
.dream-search-input{
    color: #4a4a4a;
    border: 2rpx solid #c1c1c1;
    border-radius: 8rpx;
    font-size: 24rpx;
    padding-left: 10rpx;
    height: 60rpx;
    line-height: 60rpx;
    flex: 1;
    overflow-y: auto;
}
.dream-search-btn{
    font-size: 30rpx;
    margin-left: 20rpx;
    color: #4a4a4a;
}
.dream-lists{
    padding: 0 20rpx;
}
.dream-list{
    margin-top: 20rpx;
    border: 2rpx solid #c1c1c1;
    border-radius: 8rpx;
    padding: 20rpx;

}
.dream-list-title{
    font-weight: 700;
    font-size: 28rpx;
    color: #4a4a4a;
}
.dream-list-des {
    font-size: 26rpx;
    color: #c1c1c1;
    width: 100%;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}
.dream-empty{
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #ccc; 
}