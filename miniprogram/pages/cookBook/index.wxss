.cook-book{
}
.cook-book-search{
  padding: 20rpx;
  display: flex;
  align-items: center;
}
.cook-book-search-input{
  color: #4a4a4a;
  border: 2rpx solid #c1c1c1;
  border-radius: 8rpx;
  font-size: 24rpx;
  padding-left: 10rpx;
  height: 60rpx;
  line-height: 60rpx;
  flex: 1;
  overflow-y: auto;
}
.cook-book-search-btn{
  font-size: 30rpx;
  margin-left: 20rpx;
  color: #4a4a4a;
}
.cook-book-lists{
  padding: 0 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.cook-book-list{
  margin-top: 20rpx;
  height: 400rpx;
  border-radius: 8rpx;
  padding: 20rpx;
  position: relative;
  display: flex;
  justify-content: center;
}
.cook-book-list-image{
  width: 100%;
  height: 100%;
}
.cook-book-list-title{
  position: absolute;
  color: #fff;
  font-size: 28rpx;
  font-weight: 700;
  left: 30rpx;
  bottom: 40rpx;
}
.cook-book-empty{
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ccc;  
}
.cook-book-all{
  text-align: center;
  padding: 20rpx 0;
  color: #4a4a4a;
  font-size: 28rpx;
  font-weight: 700;
}