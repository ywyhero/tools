.tools{
    height: 100%;
}
.tools-img{
    top: 75rpx;
    position: fixed;
    z-index: -1;
    width: 100%;
}
.tools-swiper{
    padding-top: 30rpx;
    height: 280rpx;
}
.tools-swiper-item{
    box-sizing: border-box;
    padding: 0 8rpx;
}
.tools-image{
    width: 100%;
    height: 280rpx;
    border-radius: 20rpx;
}
.tools-lists{
    width: 750rpx;
    display: flex;
    flex-wrap: wrap;
}
.tools-list{
    margin-bottom: 40rpx;
}
.tools-list-title{
    width: 100%;
    display: flex;
    padding: 30rpx;
    font-weight: 700;
    color: #4a4a4a;
    font-size: 32rpx;
    align-items: center;
}
.tools-list-main{
}
.tools-list-des{
    font-size: 26rpx;
    color: #c1c1c1;
}
.tools-list-items{
    display: flex;
    flex-wrap: wrap;
}
.tools-list-item{
    padding: 0 30rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.tools-list-item-img{
    width: 108rpx;
    height: 108rpx;
    border-radius: 108rpx;
    margin-bottom: 12rpx;
}
.tools-list-item-title{
    font-size: 24rpx;
    color: #4a4a4a;
}
.tools-unopen{
    color: #cccc;
}
.login{
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: transparent;
}
