/**index.wxss**/
.container {
  width: 100%;
  height: 60%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.userinfo-avatar {
  width: 120rpx;
  height: 120rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}
.userinfo-name{
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  font-size: 30rpx;
  color: #4a4a4a;
}
.userinfo-avatar:after {
  border: none;
}
.userinfo{
  margin-top: 60rpx;
}
.userinfo-btn{
  box-sizing: border-box;
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #4a4a4a;
  background: #fff;
  font-size: 32rpx;
}